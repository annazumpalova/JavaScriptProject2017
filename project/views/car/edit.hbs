<div class="container body-content span=8 offset=2">
    <div class="well">
        <form class="form-horizontal" method="POST" action="/car/edit/{{id}}">
            <fieldset>
                <legend>Edit Car</legend>

                <div class="form-group">
                    <label class="col-sm-4 control-label" for="articleTitle">Vehicle make</label>
                    <div class="col-sm-4 ">
                        <input type="text" class="form-control" id="articleTitle" placeholder="Car make" value="{{make}}" name="make" required >
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-4 control-label" for="model">Model</label>
                    <div class="col-sm-4 ">
                        <input type="text" class="form-control" id="model" placeholder="Model" value="{{model}}" name="model" required >
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-4 control-label" for="bodyType">Body type</label>
                    <div class="col-sm-4 ">
                        <input type="text" class="form-control" id="bodyType" placeholder="Body type" value="{{body}}" name="body" required >
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-4 control-label" for="fuelType">Fuel type</label>
                    <div class="col-sm-4 ">
                        <input type="number" class="form-control" id="fuelType" placeholder="Fuel type" value="{{fuel}}" name="fuel" required >
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-4 control-label" for="priceUpTo">Price</label>
                    <div class="col-sm-4 ">
                        <input type="number" class="form-control" id="price" placeholder="Price" value="{{price}}" name="price" required >
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-4 control-label" for="mileageUpTo">Mileage</label>
                    <div class="col-sm-4 ">
                        <input type="text" class="form-control" id="mileage" placeholder="Mileage" value="{{mileage}}" name="mileage" required >
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-4 control-label" for="articleContent">Additional information</label>
                    <div class="col-sm-6">
                        <textarea class="form-control" id="articleContent" rows="5" name="information" required>{{information}}</textarea>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-4 col-sm-offset-4">
                        <a href="/" class="btn btn-default">Cancel</a>

                        <button type="submit" href="/car/edit/{{id}}" class="btn btn-success">Edit</button>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
</div>
